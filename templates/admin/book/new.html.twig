{% extends 'base.html.twig' %}

{% set action = app.current_route == 'app_admin_book_new' ? 'Ajout' : 'Édition' %}

{% block title %}{{ action }} d'un livre{% endblock %}

{% block body %}

<section class="container" style="min-height:100vh">
    <div class="row justify-content-center mt-5 py-5">
        <div class="col-6">
            <h1>Ajout d'un livre </h1>

            {{ form_start(form) }}
                {{ form_row(form.title, {label: 'Titre'}) }}
                {{ form_row(form.isbn, {label: 'Numéro ISBN/EAN-13'}) }}
                {{ form_row(form.cover, {label: 'Couverture/affiche (lien URL)'}) }}
                {{ form_row(form.editedAt, {label: "Date d'édition ou de sortie"}) }}
                {{ form_row(form.plot, {label: 'Synopsis/Description'}) }}
                {{ form_row(form.pageNumber, {label: 'Nombre de pages ou durée en minutes'}) }}
                {{ form_row(form.status, {label: 'Statut'}) }}
                {{ form_row(form.editor, {label: 'Éditeur/Producteur'}) }}
                {{ form_row(form.authors, {label: 'Auteurs/Réalisateur/Artiste'}) }}
                {{ form_row(form.langue, {label: 'Langue'}) }}
                {{ form_row(form.category, {label: 'Catégorie'}) }}
                {{ form_row(form.mediaType, {label: 'Type de médias'}) }}
            <button type="submit" class="btn btn-primary">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}
